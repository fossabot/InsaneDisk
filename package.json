{
    "name": "@yannickfricke/insanedisk",
    "version": "0.0.0",
    "private": false,
    "files": [
        "./dist/"
    ],
    "author": "Yannick Fricke <yannickfricke@googlemail.com>",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "commit": "git-cz",
        "lint": "tslint --project ./tsconfig.json",
        "lint:fix": "tslint --fix --project ./tsconfig.json",
        "lint:watch": "chokidar './src/**/*.ts' -c 'node -e \"console.clear()\" && yarn lint' --initial",
        "lint:fix:watch": "chokidar './src/**/*.ts' -c 'node -e \"console.clear()\" && yarn lint:fix' --initial",
        "release": "yarn semantic-release",
        "postrelease": "npm run test --collectCoverage --coverageReporters=text-lcov | coveralls",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "devDependencies": {
        "@semantic-release/commit-analyzer": "^6.1.0",
        "@semantic-release/git": "^7.0.8",
        "@semantic-release/npm": "^5.1.7",
        "@semantic-release/release-notes-generator": "^7.1.4",
        "@types/jest": "^24.0.13",
        "@types/node": "^12.0.2",
        "chokidar-cli": "^1.2.2",
        "commitizen": "^3.1.1",
        "coveralls": "^3.0.3",
        "cz-conventional-changelog": "^2.1.0",
        "husky": "^2.3.0",
        "jest": "^24.8.0",
        "semantic-release": "^15.13.12",
        "ts-jest": "^24.0.2",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test"
        }
    }
}
